#map {
  width: 500px;
  height: 400px;
  background-color: #CCC;
}
#footer{
color: #616161;
cursor: auto;
display: inline;
font-family: verdana;
font-size: 11px;
font-style: normal;
font-weight: bold;
height: auto;
letter-spacing: normal;
text-align: left;
text-decoration: underline;
white-space: nowrap;
width: auto;
}
#infobox {
    margin-bottom: 10px;
}
#infobox .title {
    font-family: 'Open Sans Condensed', sans-serif;
    font-size: 22px;
    font-weight: 400;
    padding: 10px;
    background-color: #48b5e9;
    color: white;
    margin: 0;
    border-radius: 2px 2px 0 0;
}